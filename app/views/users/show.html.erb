<div class="user-container see-through center">
  <span class="page-title title thicker"> <%= @user.username %>'s User Page </span><br><br>

  <div class="user-box subtitle thicker"> <%= @user.username %>'s Unpublished Work:

  <% if @user.versions %>
    <div class="cat-arts">
      <% @user.versions.where(published: false).each do |version| %>
        <%= link_to version.title, version_path(version), class: "each-version thicker info" %>
      <% end %>
    </div>
  <% end %>
  </div>




  <div class="user-box subtitle thicker"> <%= @user.username %>'s Published Work:

    <% if @user.versions %>
      <div class="cat-arts">
        <% @user.versions.where(published: true).each do |version| %>
          <%= link_to version.title, article_version_path(version.article_id, version), class: "each-version thicker info" %>
        <% end %>
      </div>
    <% end %>

  </div>

  <div class="user-box subtitle thicker">
    <% if current_user.clearance == "admin" %>
      <br><br>
      <h3>Users:</h3>
      <ul>
        <% User.all.each do |user| %>
          <li><%= user.username %></li>
          <% if user.clearance == "moderator" %>
            <a href="#">Demote to editor</a>
          <% if else user.clearance == "editor"%>
            <a href="#">Promote to moderator</a>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>

</div>
