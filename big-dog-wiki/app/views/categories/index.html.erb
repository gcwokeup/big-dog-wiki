<div class="categories-container see-through">

  <div class="search">
    <%= search_form_for @search do |f| %>

    Search articles<br>
    <%= f.label :title %>
    <%= f.search_field :title_cont %>

    <%= f.submit %>
    <% end %>
  </div>
  <div class="feature thicker subtitle">
    Featured Article:
    <%= link_to "#{featured_article.title}", article_path(featured_article) %>
  </div>
  
  <div class="indextitle thicker title">All Categories</div>

  <div class="cats" id="thicker subtitle">
    <% @categories.each do |category| %>
      <div class="eachcat">
        <%= link_to category.name, category_path(category), class: "each-category thicker info" %>

      </div>
    <% end %>
  </div>


  <%= link_to " Create a New Category ", new_category_path, class: "new_category" %>

</div>

