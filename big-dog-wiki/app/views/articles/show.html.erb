<div class="article-container see-through center">


  <span class="article-title title thicker"> Article: <%= @article.title %> </span>



  <span class="article-editor info thicker"> Author: <%= @article.editor.username %> </span>

  <div class="article-categories">

    <span class="info thicker"> Categories: </span>

    <% @article.categories.each do |category| %>

      <span class="content thicker"> <%= link_to category.name, category_path(category) %> </span>

    <% end %>

  </div>


  <div class="article-content content"><%= @article.content.html_safe %></div>

  <div class="sources">
    <span class="subtitle thicker">Sources:</span><br><br>
    <% @article.sources.each do |source| %>

      <span class="content thicker each-source"> <%= link_to source.url, "http://#{source.url}"%> </span><br>

    <% end %>

  </div>

  <% if current_user %>
    <p class="edit-article info thicker"> <%= link_to 'Edit Article', edit_article_path(@article) %></p>
  <% else %>
    <br>
    <br>
    <br>
    <p>Log in to edit!</p>
    <img src="https://media.giphy.com/media/UQDmnGZNm9Blu/giphy.gif">
  <% end %>

</div>
